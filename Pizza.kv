#: import utils kivy.utils
#: set color1 "#DD7835"
#: set color2 "#C8C8C8"



MainWidget:

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<TitleLabel@FitLabel>:
    padding: dp(16),dp(3)
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            size: self.size
            pos: self.pos

<MainWidget>:
    recycleView: RecycleView

    CoverImage:
        source: "Images/menu_background.jpg"
        opacity: .6

    BoxLayout:
        cols:3
        orientation: "vertical"
        Image:
            size_hint_y: None
            height: 100
            source: "Images/small_logo.png"
        TitleLabel:
            text: "Les Pizzas"
            font_size: "26dp"
        BoxLayout:

            padding: dp(20), dp(20)
            RecycleView:
                id: RecycleView
                viewclass: 'PizzaWidget'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(16)
        Label:
            size_hint: None, None
            width: root.width
            height: dp(30) if root.error_text else 0
            text: root.error_text
            font_size: dp(12)
            bold: True
            canvas.before:
                Color:
                    rgba: 1,0,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos


<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    color: utils.get_color_from_hex(color2)
    #canvas.before:
    #    Color:
    #        rgb: utils.get_random_color()
    #    Rectangle:
    #        pos: self.pos
    #        size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size
    font_size: "22dp"
    bold: True



<PizzaWidget>:

    BoxLayout:
        size_hint_max_x: root.width/2 #dp(300)
        size_hint_min_x: dp(300)
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.name
            Image:
                size_hint: None,None
                size: "20dp", "20dp"
                source: "Images/vegetarian_logo.png"
                opacity: 1 if root.veggi else 0
            #FitLabel:
            #    text: "VEGETARIENNE" if root.veggi else ""  #root.get_veggi()
        LeftAlignLabel:
            text: root.ingredients
    Label:
        size_hint_x: None
        width: 80
        text: "{:.2f}".format(root.price)+"â‚¬"
        text_size: self.size
        bold: True
        halign: "right"
        valign: "center"
        font_size: "20dp"
        color: utils.get_color_from_hex(color1)

